<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dji.videostreamdecodingsample.MainActivity">

    <RelativeLayout
        android:id="@+id/main_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/title_dark">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_main_activity"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <SurfaceView
        android:id="@+id/livestream_preview_sf"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_below="@id/main_title_rl"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dip" >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="100dip" />

        </TableRow>

        <TableRow
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:gravity="left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="horizontal">

                <Space
                    android:layout_width="20dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:text="Actuate Gimbal"
                    android:textAlignment="textStart" />

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <SeekBar
                    android:id="@+id/actuate_gimbal_seekbar"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:max="1"
                    android:progress="1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dip" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:text="Actuate Controls"
                    android:textAlignment="center" />

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <SeekBar
                    android:id="@+id/actuate_seekbar"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:max="1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:text="Virtual Sticks"
                    android:textAlignment="gravity" />

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <SeekBar
                    android:id="@+id/virtual_stick_enable_seekbar"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:max="1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:text="Adv. Virtual Sticks"
                    android:textAlignment="gravity" />

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <SeekBar
                    android:id="@+id/advanced_virtual_stick_enable_seekbar"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:max="1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:text="Takeoff"
                    android:textAlignment="gravity" />

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <SeekBar
                    android:id="@+id/takeoff_seekbar"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:max="1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:text="Prec. Takeoff"
                    android:textAlignment="gravity" />

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <SeekBar
                    android:id="@+id/precision_takeoff_seekbar"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:max="1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:text="Land"
                    android:textAlignment="gravity" />

                <Space
                    android:layout_width="10dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <SeekBar
                    android:id="@+id/land_seekbar"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:max="1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1" />

            </LinearLayout>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_title_rl"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_main_screen_texture"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Demo TextureView"
            android:visibility="gone"
            android:focusable="true" />

        <Button
            android:id="@+id/activity_main_screen_surface_with_own_decoder"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Demo custom decoder"
            android:visibility="gone" />

        <Button
            android:id="@+id/activity_main_screen_surface"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Demo SurfaceView"
            android:visibility="gone" />


        <Button
            android:id="@+id/activity_main_screen_shot"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="YUV Screen Shot"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/activity_main_save_path"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_below="@id/main_title_rl"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/activity_main_screen_shot"
        android:background="@color/title_dark"
        android:gravity="bottom"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:textColor="@color/colorWhite"
        android:visibility="invisible"
        tools:ignore="NotSibling" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/yaw_seekbar"
            android:layout_width="400dip"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal"
            android:max="1000"
            android:progress="500"
            android:translationY="130dip" />

        <TextView
            android:id="@+id/yaw_textview"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:text="Yaw"
            android:translationY="110dip" />

        <SeekBar
            android:id="@+id/roll_seekbar"
            android:layout_width="400dip"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal"
            android:max="1000"
            android:progress="500"
            android:translationY="580dip" />

        <TextView
            android:id="@+id/roll_textview"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:text="Roll"
            android:translationY="620dip" />

        <SeekBar
            android:id="@+id/throttle_seekbar"
            android:layout_width="400dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:max="1000"
            android:progress="500"
            android:rotation="270"
            android:translationX="175dip" />

        <TextView
            android:id="@+id/throttle_textview"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:rotation="270"
            android:text="Throttle"
            android:translationX="300dip" />

        <SeekBar
            android:id="@+id/pitch_seekbar"
            android:layout_width="400dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:max="1000"
            android:progress="500"
            android:rotation="270"
            android:translationX="750dip" />

        <TextView
            android:id="@+id/pitch_textview"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:rotation="270"
            android:text="Pitch"
            android:translationX="975dip" />

        <SeekBar
            android:id="@+id/gimbal_tilt_seekbar"
            android:layout_width="400dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:max="1000"
            android:progress="500"
            android:rotation="270"
            android:translationX="940dip" />

        <TextView
            android:id="@+id/gimbal_tilt_textview"
            android:layout_width="150dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:rotation="270"
            android:text="Gimbal Tilt"
            android:translationX="1045dip" />

        <SeekBar
            android:id="@+id/gimbal_absolute_tilt_seekbar"
            android:layout_width="400dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:max="1000"
            android:progress="500"
            android:rotation="270"
            android:translationX="1050dip" />

        <TextView
            android:id="@+id/gimbal_absolute_tilt_textview"
            android:layout_width="150dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:rotation="270"
            android:text="Gimbal Absolute Tilt"
            android:translationX="1155dip" />

        <TextView
            android:id="@+id/gimbal_info_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:rotation="0"
            android:text="Gimbal Info"
            android:translationX="1075dip"
            android:translationY="-250dip" />

        <TextureView
            android:id="@+id/livestream_preview_ttv"
            android:layout_width="500dip"
            android:layout_height="282dip"
            android:layout_gravity="center"
            android:alpha="50"
            android:visibility="visible" />


    </FrameLayout>

    <TextView
        android:id="@+id/frame_info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:translationY="75dip" />

</RelativeLayout>
